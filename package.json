{
  "name": "gesnext-payslip-cli",
  "version": "1.0.2",
  "description": "CLI tool to download payslips from GesNext employee portal",
  "main": "bin/index.js",
  "bin": {
    "payslip": "./bin/index.js"
  },
  "scripts": {
    "start": "node bin/index.js",
    "lint": "eslint --fix bin/**/*.{js,json}",
    "precommit": "lint-staged"
  },
  "author": "Ram√≥n Guijarro <hola@soyguijarro.com>",
  "license": "MIT",
  "repository": "https://github.com/soyguijarro/gesnext-payslip-cli",
  "engines": {
    "node": ">=8.10.0"
  },
  "dependencies": {
    "chalk": "^2.3.2",
    "cli-spinner": "^0.2.8",
    "commander": "^2.15.1",
    "puppeteer": "^1.2.0",
    "request": "^2.85.0",
    "request-promise-native": "^1.0.5"
  },
  "devDependencies": {
    "eslint": "^4.19.1",
    "eslint-plugin-json": "^1.2.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.0.0",
    "prettier": "^1.11.1"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es6": true
    },
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "extends": "eslint:recommended",
    "plugins": [
      "json"
    ],
    "rules": {
      "semi": [
        "error",
        "always"
      ]
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "lint-staged": {
    "*.{js,json}": [
      "eslint --fix",
      "prettier",
      "git add"
    ]
  }
}
